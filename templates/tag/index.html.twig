{% extends 'sidebar.html.twig' %}

{% block content_class %}w-100{% endblock %}

{% block title %}TimeTracker - Tags{% endblock %}

{% block content_body %}
<div class="p-3">
    <h1 class="text-center">Tags</h1>
    {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Name', 'tag.name') }}</th>
                <th>Color</th>
                <th>Links</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for tag in pagination.items %}
            <tr>
                <td><a href="{{ path('tag_view', {name: tag.name}) }}">{{ tag.name }}</a></td>
                <td class="">
                    <span class="color-tile align-text-bottom mr-2" style="background-color: {{ tag.color }}"></span>
                    <span class="color-tile-text">{{ tag.color }}</span>
                </td>
                <td><a href="{{ path('time_entry_list', {tags: tag.name }) }}">Time entries</a> </td>
                <td>
                    <a href="{{ path('tag_view', {name: tag.name}) }}" class="btn btn-primary">Edit</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="mt-3">
        <div class="inline-form-header mb-2">Add Tag</div>
        {{ form_start(form, {attr: {class: 'form-inline'}}) }}
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {attr: {class: 'ml-2'}}) }}
        {{ form_widget(form.color, {attr: {class: 'ml-2 w-p-50'}}) }}
        <button type="submit" class="btn btn-primary ml-2">Create</button>
        {{ form_end(form) }}
    </div>

    {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% extends 'sidebar.html.twig' %}
{% import 'time/partials.html.twig' as time %}

{% block content_class %}w-100{% endblock %}

{% block title %}TimeTracker - Data{% endblock %}

{% block content_body %}
    <div class="p-3">
        <h1 class="text-center">Data Records</h1>

        {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}

{#        <div class="mt-3">#}
{#            <div class="inline-form-header mb-2">Add Statistic</div>#}
{#            {{ form_start(form, {attr: {class: 'form-inline'}}) }}#}
{#            {{ form_widget(form) }}#}
{#            <button type="submit" class="btn btn-primary ml-2">Create</button>#}
{#            {{ form_end(form) }}#}
{#        </div>#}

        <table class="table table-bordered table-hover mt-3">
            <thead>
            <tr>
                <th>Start</th>
                <th>Name</th>
                <th>Value</th>
            </tr>
            </thead>
            <tbody>
            {% for date in data|keys %}
                <tr>
{#                     TOOD use the date format of the first entry #}
                    <td colspan="3" class="table-secondary font-weight-bold">{{ date }}</td>
                </tr>
                {% for value in data[date] %}
                <tr>
                    <td>
                        {% if value.hasResource %}
                            {{ time.user_date(value.startedAt, app.user) }}
                        {% else %}
{#                            TODO user date format #}
                            {{ value.startedAt|date('m/d/Y') }}
                        {% endif %}
                    </td>
                    <td>{{ value.statistic.name }}</td>
                    <td>{{ value.value }}</td>
{#                    <td>#}
{#                        <a href="{{ path('statistic_view', {id: statistic.idString}) }}" class="btn btn-primary">View</a>#}
{#                    </td>#}
                </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td class="text-center" colspan="4">No results found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


{% extends 'sidebar.html.twig' %}
{% import 'time/partials.html.twig' as time %}
{% import 'tag/partials.html.twig' as tags %}

{% block content_class %}w-100{% endblock %}

{% block title %}TimeTracker - Today{% endblock %}

{% block content_body %}
    <div class="p-3">
        <h1 class="text-center">Today</h1>

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">Entries</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{ path('report_today') }}">Report</a>
            </li>
        </ul>

        {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}

        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>Tags</th>
                <th>{{ knp_pagination_sortable(pagination, 'Start', 'time_entry.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'End', 'time_entry.endedAt') }}</th>
                <th>Duration</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for timeEntry in pagination.items %}
                <tr>
                    <td>
                        {% for timeEntryTag in timeEntry.timeEntryTags %}
                        {% set tag = timeEntryTag.tag %}
                            {{ tags.view(tag.name, tag.color) }}
                        {% endfor %}
                    </td>
                    <td>{{ time.user_date(timeEntry.createdAt, app.user) }}</td>
                    <td>
                        {% if timeEntry.over %}
                            {{ time.user_date(timeEntry.endedAt, app.user) }}
                        {% endif %}
                    </td>
                    <td>
                        {% if timeEntry.over %}
                            {{ time.user_duration(timeEntry.duration, app.user) }}
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('time_entry_view', {id: timeEntry.idString}) }}" class="btn btn-primary">View</a>
                        <a href="{{ path('time_entry_continue', {id: timeEntry.idString}) }}" class="btn btn-secondary">Continue</a>
                        {% if timeEntry.running %}
                            <a href="{{ path('time_entry_stop', {id: timeEntry.idString}) }}" class="btn btn-secondary">Stop</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <th colspan="3">Total time</th>
                <td colspan="2">{{ totalTime }}</td>
            </tr>
            </tfoot>
        </table>

        {% if latestTimeEntry.over %}
            <div>
                <a href="{{ path('time_entry_create') }}" class="btn btn-primary">Create time entry</a>
            </div>
        {% endif %}

        {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


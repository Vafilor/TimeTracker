{% extends 'sidebar.html.twig' %}
{% import 'time/partials.html.twig' as time %}

{% block content_class %}w-100{% endblock %}

{% block title %}Statistics{% endblock %}

{% block content_body %}
    <div class="resource">
        <h1 class="text-center">Statistics</h1>

        {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}

        <form class="row no-gutters mt-3 js-create-statistic">
            <div>
                <label class="sr-only" for="statistic-create-name"></label>
                <input id="statistic-create-name" type="text" class="form-control" placeholder="name">
            </div>

            <div class="col ml-2">
                <label class="sr-only" for="statistic-create-description"></label>
                <input id="statistic-create-description" type="text" class="form-control" placeholder="description">
            </div>

            <div class="ml-2">
                <label class="sr-only" for="statistic-create-time-type"></label>
                <select id="statistic-create-time-type" class="form-control">
                    <option value="instant" selected="selected">instant</option>
                    <option value="interval">interval</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary ml-2">Create</button>
        </form>

        <table class="table table-bordered table-hover mt-3 js-statistic-list">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Name', 'statistic.name') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Created', 'statistic.createdAt') }}</th>
                <th>Unit</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for statistic in pagination.items %}
                <tr
                    class="statistic-row"
                    data-name="{{ statistic.name }}"
                    data-created-at="{{ statistic.createdAt.timestamp }}">
                    <td>
                        <a href="{{ path('statistic_view', {id: statistic.idString}) }}">
                            {% if statistic.hasIcon %}
                                <i class="{{ statistic.icon }}" style="color:{{ statistic.color }}"></i>
                            {% endif %}
                            {{ statistic.name }}
                        </a>
                    </td>
                    <td>{{ time.user_datetime(statistic.createdAt, app.user) }}</td>
                    <td>{{ statistic.unit }}</td>
                    <td>
                        <a href="{{ path('statistic_view', {id: statistic.idString}) }}" class="btn btn-primary">View</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-center" colspan="4">No results found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {{ encore_entry_link_tags('statistic_index') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {{ encore_entry_script_tags('statistic_index') }}
{% endblock %}


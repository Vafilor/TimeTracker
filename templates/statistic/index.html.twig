{% extends 'sidebar.html.twig' %}
{% import 'time/partials.html.twig' as time %}

{% block content_class %}w-100{% endblock %}

{% block title %}TimeTracker - Statistics{% endblock %}

{% block content_body %}
    <div class="p-3">
        <h1 class="text-center">Statistics</h1>

        {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}

        <div class="mt-3">
            <div class="inline-form-header mb-2">Add Statistic</div>
            {{ form_start(form, {attr: {class: 'form-inline'}}) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary ml-2">Create</button>
            {{ form_end(form) }}
        </div>

        <table class="table table-bordered table-hover mt-3">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Name', 'statistic.name') }}</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for statistic in pagination.items %}
                <tr>
                    <td><a href="{{ path('statistic_view', {id: statistic.idString}) }}">{{ statistic.name }}</a></td>
                    <td>{{ time.user_date(statistic.createdAt, app.user) }}</td>
                    <td>
                        <a href="{{ path('statistic_view', {id: statistic.idString}) }}" class="btn btn-primary">View</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td class="text-center" colspan="4">No results found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {{ knp_pagination_render(pagination, null, {}, {'align': 'center'}) }}
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}


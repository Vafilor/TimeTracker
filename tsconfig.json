{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./public/build",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "es2019",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitOverride": true,
  },
  "include": ["assets/ts/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
